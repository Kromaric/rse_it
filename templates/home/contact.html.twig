{% extends 'base.html.twig' %}
{% block title %}
  Contact - RSE-IT
{% endblock %}
{% block body %}
  <section class="contact py-5 my-5 text-white">
    <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
      <div class="d-flex justify-content-center">
        <div class="text-center">
          <h1 class="mx-auto mt-5 text-uppercase text-white fw-bold">Contactez-nous</h1>
          <h2 class="text-white-100 mx-auto mt-2 mb-5 text-white">Nous sommes là pour vous aider à exprimer vos besoins votre amour pour la nature!</h2>
        </div>
      </div>
    </div>
  </section>
  <div class="container-fluid">
    <!-- Section: Content -->
    <section class="mb-5">
      <h4 class="mb-3 text-center"><strong>Formulaire de contact</strong></h4>

      <div class="row d-flex justify-content-center">
        <div class="col-md-6">
          {% for label, messages in app.flashes %}
            {% for message in messages %}
              <div class="alert alert-{{ label }} mt-3">{{ message }}</div>
            {% endfor %}
          {% endfor %}

          {{ form_start(form) }}
          {{ form_end(form) }}
        </div>
      </div>
    </section>
  </div>
  <!-- Section: Content -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4">
          <i class="bi bi-envelope fs-3 text-success"></i>
          <p>contact@rse-it.org</p>
        </div>
        <div class="col-md-4">
          <i class="bi bi-telephone fs-3 text-success"></i>
          <p>+33 07 69 17 10 25</p>
        </div>
        <div class="col-md-4">
          <i class="bi bi-geo-alt fs-3 text-success"></i>
          <p>Olivet, Orléans</p>
        </div>
      </div>

      <!-- Google Maps  -->
      <div class="mt-4 text-center">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2677.6024138440894!2d1.9106874752407652!3d47.84729527132701!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4e5dfb484c969%3A0xe1b49ac14549732b!2sECOLE-IT!5e0!3m2!1sfr!2sfr!4v1744416743289!5m2!1sfr!2sfr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </section>
{% endblock %}
